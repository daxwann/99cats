<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div>
        <% if current_user %>
          <div>
            <p><%= current_user.username %>
          </div>
        <% end %>
        <form action="<%= current_user ? session_url : new_session_url%>" 
          method="<%= current_user ? "POST" : "GET" %>">
          <% if current_user %>
            <%= auth_token %>
            <input type="hidden" 
              name="_method" 
              value="delete">
          <% end %>
          <input type="submit" 
            value="<%= current_user ? "Logout" : "Login" %>">
        </form>
      </div>
    </header>

    <%= yield %>

    <footer>
      <p>This is an AppAcademy project created by Dax Wann</p>

      <%= yield :footer %>
    </footer>
  </body>
</html>
